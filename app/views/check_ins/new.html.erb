<style>

    #container {
        line-height: 0;
    }

    #container.example-style-2 {
        position: relative;
        width: fit-content;
        height: fit-content;
        overflow: hidden;
    }
    #container.example-style-2 .scan-region-highlight {
        border-radius: 30px;
        outline: rgba(0, 0, 0, .25) solid 50vmax;
    }
    #container.example-style-2 .scan-region-highlight-svg {
        display: none;
    }
    #container.example-style-2 .code-outline-highlight {
        stroke: rgba(255, 255, 255, .5) !important;
        stroke-width: 15 !important;
        stroke-dasharray: none !important;
    }

</style>

<div data-controller="qr-scanner">
  <div data-qr-scanner-target="details">
    <h1 class="font-bold text-4xl">Event Check In</h1>
    <h2 class="text-3xl font-bold text-gray-800 mb-4"><%= @event.title %></h2>
    <p class="text-gray-600 mb-6"><%= @event.start_date %> at <%= @event.location %></p>
  </div>

  <div class="border border-purple-600 p-4 rounded-lg">

    <div data-qr-scanner-target="result" class="">RESULT:</div>

    <div id="container" data-qr-scanner-target="container" class="example-style-2">
      <video id="video" data-qr-scanner-target="video" ></video>
      <div id="overlay" data-qr-scanner-target="overlay"></div>

    </div>
    <button id="start-scanner" data-qr-scanner-target="startScanner"
            class="bg-purple-600 text-white py-2 px-4 rounded mb-4">Start Scanner
    </button>
    <button id="stop-scanner" data-qr-scanner-target="stopScanner"
            class="bg-purple-600 text-white py-2 px-4 rounded mb-4 hiddne">Stop Scanner
    </button>
  </div>
</div>
