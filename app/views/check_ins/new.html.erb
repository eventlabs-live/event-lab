<div data-controller="qr-scanner">
  <div data-qr-scanner-target="details">
    <h1 class="font-bold text-4xl">Event Check In</h1>
    <h2 class="text-3xl font-bold text-gray-800 mb-4"><%= @event.title %></h2>
    <p class="text-gray-600 mb-6"><%= @event.start_date %> at <%= @event.location %></p>
  </div>

  <div class="border border-purple-600 p-4 rounded-lg">

    <div data-qr-scanner-target="result" class="mt-4 border border-gray-300 p-4 rounded-lg">RESULT:</div>

    <div id="container" data-qr-scanner-target="container">

      <video id="video" data-qr-scanner-target="video" width="310" height="300" class="hidden"></video>
      <div data-qr-scanner-target="overlay" class="bg-purple-600 opacity-20 text-white py-2 px-4 rounded mb-4 hidden"></div>

    </div>
    <button id="start-scanner" data-qr-scanner-target="startScanner"
            class="bg-purple-600 text-white py-2 px-4 rounded mb-4">Start Scanner
    </button>
    <button id="stop-scanner" data-qr-scanner-target="stopScanner"
            class="bg-purple-600 text-white py-2 px-4 rounded mb-4 hidden">Stop Scanner
    </button>
  </div>
</div>
