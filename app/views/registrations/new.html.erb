<h1>Sign Up For This Event</h1>
<h2 class="text-2xl font-bold text-gray-800 mb-6">Create New Registration</h2>

<%= form_with( model: @registration,  method: :post, url: event_registrations_path, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4") do |f| %>

  <h2 class="text-3xl font-bold text-gray-800 mb-4"><%= @registration.event.title %></h2>
  <p class="text-gray-600 mb-6"><%= @registration.event.start_date %> at <%= @registration.event.location %></p>

  <div class="bg-white shadow rounded p-6 mb-6">
    <h3 class="text-xl font-bold text-gray-800 mb-2">Event Description</h3>
    <p class="text-gray-700"><%= @registration.event.description %></p>
  </div>


  <div class="mb-1">
    <%= f.label :quantity, "Quantity", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.number_field :quantity, class: "form-input mt-1 block w-full border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 rounded-md shadow-sm" %>
  </div>
  <div class="mb-6">
    <%= f.label :status, "Status", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.select :status, Registration.statuses, {}, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>
  <div class="flex items-center justify-between">
    <%= f.submit "Submit Registration", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>