<h2 class="text-2xl font-bold text-gray-800 mb-4"><%= @user.name %>'s Profile</h2>

<div class="bg-white shadow-md rounded p-6">
  <p class="text-gray-600 mb-2"><strong>Email:</strong> <%= @user.email %></p>
  <p class="text-gray-600 mb-2"><strong>Role:</strong> <%= @user.role %></p>

  <% if current_user == @user %>
    <%= link_to 'Edit Profile', edit_user_path(@user), class: "mt-4 inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  <% end %>
</div>
