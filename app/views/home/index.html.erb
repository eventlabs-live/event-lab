<%# app/views/home/index.html.erb %>

<% unless user_signed_in? %>
<section>
  <%# Hero Banner %>
  <%= render partial: 'shared/hero_banner', locals: { hero: @hero } %>
</section>
<% end %>


<%= render partial: 'carousel', locals: { hero: @hero} %>

<%# Categories %>
<section class="py-12 bg-gray-50">
  <div class="container mx-auto px-4">
    <h3 class="text-2xl font-semibold mb-8">Categories</h3>
    <div class="grid grid-cols-4 md:grid-cols-8 gap-6">
      <% categories = ['Music', 'Business', 'Nightlife', 'Holidays', 'Food & Drink', 'Education', 'Gaming', 'Politics'] %>
      <% categories.each do |category| %>
        <div class="flex flex-col items-center">
          <div class="w-16 h-16 bg-white rounded-full shadow-md flex items-center justify-center mb-2">
            <%# Add category icon here %>
          </div>
          <span class="text-sm text-gray-600"><%= category %></span>
        </div>
      <% end %>
    </div>
  </div>
</section>

<section>
<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-2 sm:gap2 pl-1">
  <% @events.each do |event| %>
    <div class="bg-white shadow-md rounded p-1">
      <div class="relative w-full h-full flex items-center justify-center">
        <%= link_to event_path(event) do %>
          <% if event.cover_image.attached? %>
            <%= image_tag event.cover_image,  class: "w-full h-full" %>
          <% else %>
            <%=  image_tag 'ticket_stub_blank.png', class: "w-full h-full" %>
            <div class="absolute bottom-0  md:bottom-ÃŸ lg:bottom-10 left-[17.5%]">
              <p class="text-center font-bold sm:font-normal text-xs md:text-lg lg:text-lg transform -rotate-90 origin-left whitespace-nowrap overflow-hidden"><%= event.start_date.strftime('%d-%m-%y@%I:%M') %></p>
            </div>
            <div class="absolute top-1 lg:top-4 left-[25%] text-brown h-[95%] w-[70%] overflow-hidden">

              <div class="grid-cols-1 h-full flex flex-col justify-between">
                <div>
                  <p class="text-black font-bold truncate ..."><%= event.title %></p>
                  <p class="text-red-800 truncate ...">At <%= event.location %></p>
                </div>
                <p class="text-center text-gray-600 text-xs font-bold capitalize">By <%= event.organizer.name %></p>
              </div>

            </div>
          <% end %>

        <% end %>
      </div>
    </div>
  <% end %>
</div>
</section>

  <!-- Trending Events Section -->
  <section class="mb-8">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-lg font-semibold text-indigo-900">Trending Events</h2>
      <a href="#" class="text-sm text-gray-600">See All</a>
    </div>

    <div class="grid grid-row-1 gap-4">
      <% 3.times do |event| %>
      <%= render "article" %>

      <% end %>
    </div>
  </section>

  <!-- Most Popular Section -->
  <section class="mb-8">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-lg font-semibold text-indigo-900">Most Popular</h2>
      <a href="#" class="text-sm text-gray-600">See All</a>
    </div>

<!--     Similar grid structure as Trending Events-->
    <div class="grid grid-cols-2 gap-4">
      <% @popular_events&.each do |event| %>
<!--         Similar card structure as above-->
      <% end %>
    </div>
  </section>

  <!-- More Events Section -->
  <section>
    <h2 class="text-lg font-semibold text-indigo-900 mb-4">More Events</h2>
    <div class="grid grid-cols-2 gap-4">
      <% @more_events&.each do |event| %>
<!--         Similar card structure as above-->
      <% end %>
    </div>
  </section>


  <%# Event Listings %>
  <section class="">
    <div class="con">
      <div class="flex flex-col items-center justify-between">
        <h3 class="text-2xl font-semibold">Browsing events in New York City</h3></br
        <div class="grid grid-rows-1 justify-start space-x-2">
          <button class="px-1 py-1 text-sm rounded-full border border-gray-300 hover:bg-gray-50">All</button>
          <button class="px-1 py-1 text-sm rounded-full border border-gray-300 hover:bg-gray-50">For You</button>
          <button class="px-1 py-1 text-sm rounded-full border border-gray-300 hover:bg-gray-50">Online</button>
          <button class="px-1 py-1 text-sm rounded-full border border-gray-300 hover:bg-gray-50">Today</button>
          <button class="px-1 py-1 text-sm rounded-full border border-gray-300 hover:bg-gray-50">Free</button>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-1">
        <% 4.times do %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="aspect-w-16 aspect-h-9 bg-gray-200"></div>
            <div class="p-1">
              <div class="flex justify-between items-start mb-2">
                <h4 class="font-semibold">Event Title</h4>
                <span class="text-sm text-gray-500">Free/Paid</span>
              </div>
              <div class="text-sm text-gray-600 mb-2">
                <p>Saturday, Oct 22</p>
                <p>10:41 pm</p>
                <p>Park Avenue Garden, NYC</p>
              </div>
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-2">
                  <div class="w-8 h-8 bg-gray-200 rounded-full"></div>
                  <span class="text-sm text-gray-600">Organizer Name</span>
                </div>
                <button class="px-4 py-2 text-sm text-white bg-purple-600 rounded-lg hover:bg-purple-700">Book Now</button>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <%# Interests Section %>
  <section class="py-12 bg-gray-50 shadow border-gray-200">
    <div class="container mx-auto px-4">
      <h3 class="text-2xl font-semibold mb-4">Let's make it personal!</h3>
      <p class="text-gray-600 mb-8">Select your interests to get event suggestions based on what you love</p>
      <div class="flex flex-wrap gap-4">
        <% interests = ['Badminton', 'Cricket', 'Music', 'Cooking', 'Travelling', 'Dancing', 'Art', 'Designing', 'Political Science', 'Party', 'Singing', 'EDM'] %>
        <% interests.each do |interest| %>
          <button class="px-4 py-2 text-sm rounded-full border border-gray-300 hover:bg-gray-50">
            <%= interest %>
          </button>
        <% end %>
      </div>
    </div>
  </section>