<section class="mx-auto w-[85%] flex justify-center">
  <div data-controller="carousel" class="relative h-56 overflow-hidden rounded-lg md:h-96 border-b-2" >

    <!-- Carousel wrapper -->
    <div class="flex items-center h-full w-full">
      <figure data-carousel-target="slide" class="duration-700 ease-in-out">
        <%= image_tag 'event-crowd-unsplash.png', class: "object-contain" %>
      </figure>

      <figure data-carousel-target="slide" class="duration-700 ease-in-out">
        <%= image_tag 'ticket_stub_series.png', class: "object-contain" %>
      </figure>

      <figure data-carousel-target="slide" class="duration-700 ease-in-out">
        <%= image_tag 'ticket_stub_start_event.png', alt: 'Ticket Stub', class: "object-contain" %>
      </figure>

    </div>

    <button data-action="carousel#prev"
            class="absolute left-0 top-1/2 transform -translate-y-1/2 bg-transparent text-slate-400 rounded-full opacity-25 hover:opacity-75">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-8">
        <path stroke-linecap="round" stroke-linejoin="round" d="m11.25 9-3 3m0 0 3 3m-3-3h7.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
      </svg>

    </button>
    <button data-action="carousel#next"
            class="absolute right-0 top-1/2 transform -translate-y-1/2 bg-transparent text-slate-400 rounded-full opacity-25 hover:opacity-75">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-8">
        <path stroke-linecap="round" stroke-linejoin="round" d="m12.75 15 3-3m0 0-3-3m3 3h-7.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
      </svg>
    </button>
  </div>
</section>
