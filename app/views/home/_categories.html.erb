
<section class="py-4 bg-gray-50">
  <div class="text-pretty mx-auto px-4 w-[85%] ">
    <h3 class="text-2xl font-semibold mb-2 row-span-1 text-center mb-8">Categories</h3>
    <div class="flex flex-wrap justify-center inline-block">

      <% categories.each do |category| %>
        <div class="grid justify-center">
          <%= link_to events_path(category: category.name) do %>
            <div class="relative w-64 h-64 items-center">
              <div class="top-0 w-24 h-24 bg-white rounded-full shadow-md flex mb-2">
                <%# Add category icon here %>
              </div>
              <span class="bottom-0 text-lg font-bold text-black-500 w-20 text-wrap block"><%= category.name %></span>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>