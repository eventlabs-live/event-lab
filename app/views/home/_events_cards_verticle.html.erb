<% if event_list %>
  <% event_list.each do |event| %>

    <div class="inline-block px-1 mb-2">
      <article class="flex relative flex-col px-2.5 py-3 bg-white rounded-3xl border border-black border-solid min-h-[274px]">
        <%= image_tag event.cover_image, class: "object-contain" if event.cover_image.attached? %>

        <div class="flex z-0 flex-col flex-1 mt-5 w-full">
          <div class="flex flex-col flex-1 w-full">
            <div class="flex gap-6 items-start w-full min-h-[30px]">
              <h3 class="flex-1 shrink text-lg font-bold leading-none text-black basis-0"><%= event.title.capitalize %></h3>
              <button>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.75a.75.75 0 1 1 0-1.5.75.75 0 0 1 0 1.5ZM12 12.75a.75.75 0 1 1 0-1.5.75.75 0 0 1 0 1.5ZM12 18.75a.75.75 0 1 1 0-1.5.75.75 0 0 1 0 1.5Z"/>
                </svg>
              </button>
            </div>
            <div class="flex flex-col flex-1 w-full text-xs font-medium leading-none text-black">
              <time datetime="2023-11-02T13:34:00"><%= event.start_date.strftime("%A, %b %d") %></time>
              <time datetime="2023-11-02T13:34:00"><%= event.start_date.strftime("%I:%M %p") %></time>
              <address><%= event.location %></address>
            </div>
          </div>
          <div class="flex gap-3.5 items-center px-1 w-full text-black">
            <div class="self-stretch my-auto text-xs font-medium leading-none"><%= event.organizer.name.capitalize %></div>
            <div class="flex-1 shrink self-stretch my-auto text-xs text-right basis-0"><%= " #{event.organizer.followers.count} followers" %></div>
          </div>
        </div>

        <div class="flex absolute right-1 top-5 z-0 flex-col pb-4 w-11 h-[43px]">
          <Button>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17.593 3.322c1.1.128 1.907 1.077 1.907 2.185V21L12 17.25 4.5 21V5.507c0-1.108.806-2.057 1.907-2.185a48.507 48.507 0 0 1 11.186 0Z"/>
            </svg>
          </button>
        </div>

      </article>
    </div>

  <% end %>
<% end %>