
<div class="container mx-auto px-4 py-8">
  <h2 class="text-3xl font-bold mb-8">Let's get you started!</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name",
                        class: "mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autocomplete: "email",
                        class: "mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>

    <% if @minimum_password_length %>
      <% min_chars = "( #{@minimum_password_length} characters minimum)" %>
    <% end %>

    <div class="mb-4">
      <%= f.label :password,"Password #{min_chars}".rstrip ,class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, autocomplete: "new-password",
                           class: "mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
                           class: "mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>

    <div class="mb-4">
      <%= f.check_box :remember_me, class: "mr-2" %>
      <%= f.label :remember_me, class: "text-sm font-medium text-gray-700" %>
    </div>
    <div class="mb-4">
      <%= f.submit "Sign in", class: "w-full px-6 py-3 bg-indigo-600 border border-transparent rounded-md shadow-sm text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
    <div class="text-center">
      <p class="text-sm font-medium text-gray-500">or</p>
    </div>
    <div class="flex justify-center items-center space-x-4">
      <%= link_to image_tag("google.svg", alt: "Sign in with Google", class: "w-10 h-10 shadow-lg shadow-red-500/50 rounded-full"), '#', class: "flex items-center justify-center" %>
      <%= link_to image_tag("apple.svg", alt: "Sign in with Apple", class: "w-10 h-10 shadow-lg shadow-gray-500/50 rounded-full "), '#', class: "flex items-center justify-center" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

<%= render "devise/shared/links" %>
