<div class="bg-white shadow rounded p-6 mb-6">

  <h2 class="text-3xl font-bold text-gray-800 mb-4"><%= @event.title %></h2>
  <p class="text-gray-600 mb-6"><%= @event.start_date %> at <%= @event.location %></p>
  <%= turbo_frame_tag "event_status_#{@event.id}" do %>
    <p>Status: <%= @event.status %></p>
    <% if event_owner? %>
      <%= link_to 'Edit Status', edit_status_event_path(@event), data: { turbo_frame: "event_status_#{@event.id}" } %>
    <% end %>
  <% end %>
  <%= link_to 'Check In', new_event_check_in_path(@event) if event_owner? %>
</div>
<div class="bg-white shadow rounded p-6 mb-6">
  <h3 class="text-xl font-bold text-gray-800 mb-2">Event Description</h3>
  <p class="text-gray-700"><%= @event.description %></p>
</div>


<div class="bg-white shadow rounded p-6 mb-6">
  <h3 class="text-xl font-bold text-gray-800 mb-4">Tickets</h3>
  <button class="flex p-2">
    <%= link_to 'Register & Buy Tickets', new_event_event_registration_path(@event), class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  </button>
</div>

<% if @event_registrations.present? %>
  <div class="">
    <%= render partial: 'event_registrations/index', event_registrations: @event_registrations %>
  </div>
<% end %>