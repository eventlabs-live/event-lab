<div class="bg-white shadow rounded p-6 mb-6">

<h2 class="text-3xl font-bold text-gray-800 mb-4"><%= @event.title %></h2>
<p class="text-gray-600 mb-6"><%= @event.date %> at <%= @event.location %></p>
</div>
<div class="bg-white shadow rounded p-6 mb-6">
  <h3 class="text-xl font-bold text-gray-800 mb-2">Event Description</h3>
  <p class="text-gray-700"><%= @event.description %></p>
</div>

<div class="bg-white shadow rounded p-6 mb-6">
  <h3 class="text-xl font-bold text-gray-800 mb-4">Tickets</h3>
  <button class="flex p-2">
  <%= link_to 'Register & Buy Tickets', new_event_registration_path(@event), class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  </button>
</div>

<% if @registrations.present? %>
  <div class="mt-6 mb-6">
    <%= render partial: 'registrations/index', registrations: @registrations %>
  </div>
<% end %>